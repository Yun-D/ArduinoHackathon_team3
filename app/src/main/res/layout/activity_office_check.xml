<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.OfficeCheckActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#E7E7E7">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_launcher_foreground"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="연구실 재실 여부"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_margin="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="건물명"
            android:textSize="15dp"
            android:layout_marginRight="20dp"/>

        <Spinner
            android:id="@+id/sprState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <Spinner
        android:id="@+id/sprState2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>



    <!-- classroomCheck 과 동일 -->
    <!-- 연구실 목록표 -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <!-- 첫 번째 건물, 1층 연구실 목록표 -->
        <TableLayout
            android:id="@+id/tableOffice1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:padding="1dp"
            android:background="#c8c8c8">
            <TableRow
                android:layout_width="200dp"
                android:background="#ffffff">
                <TextView
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="101" />
                <TextView
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="홍길동 교수님" />
                <TextView
                    android:id="@+id/office1_1_1"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="재실" />
            </TableRow>
            <TableRow
                android:layout_width="200dp"
                android:background="#ffffff">
                <TextView
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="102" />
                <TextView
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="빛나리 교수님" />
                <TextView
                    android:id="@+id/toilet1_1_2"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="재실" />         <!-- id (추후 변경) 통해 '사용중'으로 변경 -->
            </TableRow>
        </TableLayout>

        <!-- 첫 번째 건물, 2층 연구실 목록표 -->
        <TableLayout
            android:id="@+id/tableOffice1_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:padding="1dp"
            android:background="#c8c8c8">
            <TableRow
                android:layout_width="200dp"
                android:background="#ffffff">
                <TextView
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="201" />
                <TextView
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="홍길동 교수님" />
                <TextView
                    android:id="@+id/office1_2_1"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="재실" />
            </TableRow>
            <TableRow
                android:layout_width="200dp"
                android:background="#ffffff">
                <TextView
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="202" />
                <TextView
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="빛나리 교수님" />
                <TextView
                    android:id="@+id/office1_2_2"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="재실" />
            </TableRow>
        </TableLayout>

        <!-- 첫 번째 건물, 3층 연구실 목록표 -->
        <TableLayout
            android:id="@+id/tableOffice1_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:padding="1dp"
            android:background="#c8c8c8">
            <TableRow
                android:layout_width="200dp"
                android:background="#ffffff">
                <TextView
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="301" />
                <TextView
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="홍길동 교수님" />
                <TextView
                    android:id="@+id/office1_3_1"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="재실" />
            </TableRow>
            <TableRow
                android:layout_width="200dp"
                android:background="#ffffff">
                <TextView
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="302" />
                <TextView
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="빛나리 교수님" />
                <TextView
                    android:id="@+id/office1_3_2"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="재실" />
            </TableRow>
        </TableLayout>
    </FrameLayout>

</LinearLayout>