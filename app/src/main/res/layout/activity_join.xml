<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.JoinActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:background="@drawable/join_img" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="640dp"
        android:layout_margin="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="회원가입"
            android:textColor="#AB3030"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="90dp"
            android:text="추가 정보 입력" />

        <TextView
            android:id="@+id/txtId"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="이메일"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edtName"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="이름" />

        <EditText
            android:id="@+id/edtNum"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="학번 / 관리자 번호" />

        <Button
            android:id="@+id/btnJoin"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:background="#AB3030"
            android:text="회원가입 완료"
            android:textColor="#ffffff" />
    </LinearLayout>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/join_point2"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="50dp"/>

</FrameLayout>